<!DOCTYPE html>
<html>
  <head> <% include ./partials/head %> </head>
  <body>
    <header> <% include ./partials/header %> </header>
    <div class="section">
    <h4>Welcome to MaintenanceTracker dash...</h4>
    <form class="form-horizontal section-request-form" action="/dash" method="POST">
      <fieldset>
        <legend>Create new request</legend>
        <div class="form-group">
        <div class="form-group">
          <label for="" class="col-lg-2 control-label">Requester</label>
           <div class="col-lg-5">
              <input name="requester" type="text" class="form-control" id="" placeholder="Maintenance Requester">
            </div>
          </div>

          <div class="form-group">
            <label for="" class="col-lg-2 control-label">Possession</label>
            <div class="col-lg-5">
              <input name="possession" type="text" class="form-control" id="" placeholder="Name/Type/Identification of Possession">
            </div>
          </div>

          <div class="form-group">
            <label for="" class="col-lg-2 control-label">Details</label>
            <div class="col-lg-5">
              <input name="details" type="text" class="form-control" id="" placeholder="Possession Details">
            </div>
          </div>
        </div>
  
        <div class="form-group">
          <div class="col-lg-5 col-lg-offset-2">
           <button type="reset" class="btn btn-default">Cancel</button>
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </div>
      </fieldset>
    </form>
    </div>
    <h4><%= Date(Date.now()) %></h4>

    <footer> <% include ./partials/footer %> </footer>
  </body>
</html>
