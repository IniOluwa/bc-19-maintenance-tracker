<!DOCTYPE html>
<html>
  <head>
      <% include ../partials/head %>
  </head>
  <body>
    <h3 class="login-message"><%= message %></h3>
    <div class="login-form">
      <form class="form-horizontal" action="/admin/login" method="POST">
        <fieldset>
          <legend>Login</legend>
          <div class="form-group">
            <label class="control-label col-lg-2" for="email">Email:</label>
            <div class="col-lg-5">
              <input name="email" type="email" class="form-control" id="email" placeholder="Enter email">
            </div>
          </div>

          <div class="form-group">
            <label class="control-label col-lg-2" for="pwd">Password:</label>
            <div class="col-lg-5">
              <input name="password" type="password" class="form-control" id="pwd" placeholder="Enter password">
            </div>
          </div>

          <div class="form-group">
            <div class="col-lg-5 col-lg-offset-2">
              <div class="checkbox">
                <label><input type="checkbox"> Remember me</label>
              </div>
                 <button type="submit" class="btn btn-default">Submit</button>
              </div>
          </div>
        </fieldset>
      </form>
    </div>
  </body>
</html>